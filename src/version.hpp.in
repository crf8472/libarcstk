#ifndef __LIBARCSTK_VERSION_HPP__
#define __LIBARCSTK_VERSION_HPP__


/**
 * \file version.hpp.in Provide version and name information for libarcstk.
 *
 * This file is used as a blueprint for cmake to generate a header file
 * containing the cmake-controlled version and name information for the project.
 * It is made accessible at build time for program scope.
 */


#include <string>


namespace arcstk
{

// Version info

/**
 * Major version number
 */
constexpr int LIBARCSTK_VERSION_MAJOR = @PROJECT_VERSION_MAJOR@;

/**
 * Minor version number
 */
constexpr int LIBARCSTK_VERSION_MINOR = @PROJECT_VERSION_MINOR@;

/**
 * Patch level.
 */
constexpr int LIBARCSTK_VERSION_PATCH = @PROJECT_VERSION_PATCH@;

/**
 * Version suffix (e.g. 'alpha.1', 'beta.6', 'rc.3' etc.)
 */
constexpr auto LIBARCSTK_VERSION_SUFFIX = "@PROJECT_VERSION_SUFFIX@";

/**
 * Version suffix as std::string
 */
const std::string LIBARCSTK_VERSION_SUFFIX_STRING ( LIBARCSTK_VERSION_SUFFIX );

/**
 * Textual version info.
 */
constexpr auto LIBARCSTK_VERSION_INFO = "@PROJECT_VERSION_STRING@";

/**
 * Textual version info as std::string
 */
const std::string LIBARCSTK_VERSION_INFO_STRING ( LIBARCSTK_VERSION_INFO );


// Name info

/**
 * Library name
 */
constexpr auto LIBARCSTK_NAME = "@PROJECT_NAME@";

/**
 * Library name as a std::string
 */
constexpr std::string LIBARCSTK_NAME_STRING ( LIBARCSTK_NAME );


} // namespace arcstk

#endif

